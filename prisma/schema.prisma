// This is your Prisma schema file
// Learn more at: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// üß© Project Model
// =======================
model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  pictures    String?   // if you want multiple pictures, use String[]
  tags        String[]
  livelink    String  // array of tags
  githublink    String  // array of tags
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// =======================
// üë®‚Äçüíª Admin Model
// =======================
model Admin {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  name        String?
  image       String?
  role        Role      @default(ADMIN)
  isActive    Boolean   @default(true)
  blogs       Blog[]
  lastLogin   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}


// =======================
// üì∞ Blog Model
// =======================
model Blog {
  id           Int       @id @default(autoincrement())
  title        String
  image          String    
  content      String
  isPublished  Boolean   @default(false)
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  authorId     Int
  author       Admin     @relation(fields: [authorId], references: [id])

  @@map("blogs")
}

// =======================
// üî¢ Role Enum
// =======================
enum Role {
  ADMIN

}


model AboutMe {
  id                  Int                @id @default(autoincrement())
  certifications      Certification[]    // array of certifications
  technologiesMastered Int               @default(15)
  happyClients        Int                @default(8)
  completedProjects   Int                @default(20)
  yearsOfExperience   Float              @default(1.5)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
}

model Certification {
  id        Int      @id @default(autoincrement())
  title     String
  org       String
  year      String
  image     String?   
  aboutMeId Int
  aboutMe   AboutMe   @relation(fields: [aboutMeId], references: [id], onDelete: Cascade)
}


model Technology {
  id        Int      @id @default(autoincrement())
  name      String
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
